{
  "compilerOptions": {
    "target": "es6", // Modern JS target
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // To reduce unnecessary type-checking on external libraries
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // Ensures files are emitted
    "esModuleInterop": true,
    "module": "esnext", // More modern module target
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", 
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    },
    "allowSyntheticDefaultImports": true // Allow default imports from modules that might not have them
  },
  "include": ["src/**/*", "**/*.d.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}



